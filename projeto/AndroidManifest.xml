<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.maisbarato"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.maisbarato.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.maisbarato.ComparacaoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="br.com.maisbarato.COMPARAR" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="br.com.maisbarato.AVALIACAO" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.maisbarato.ComparacaoCervejaGarrafa"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="br.com.maisbarato.COMPARAR_GARRAFA" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="br.com.maisbarato.AVALIACAO" />
            </intent-filter>
        </activity>
    </application>

</manifest>
